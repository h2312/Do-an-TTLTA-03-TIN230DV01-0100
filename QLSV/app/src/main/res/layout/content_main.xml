<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/bgmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Chào mừng bạn đến với ứng dụng quản lý sinh viên "
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/imgbgmain"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/bgmain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-32dp"
            android:src="@drawable/sv" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgbgmain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-38dp"
            android:text="Chọn thanh menu bên trái để bắt đầu sử dụng chương trình"
            android:textSize="15dp"
            android:textStyle="italic"
            android:gravity="center"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>